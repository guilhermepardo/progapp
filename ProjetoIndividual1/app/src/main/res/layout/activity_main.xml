<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_texto"
        android:hint="Digite seu nome (não digite Gersinho)"
        android:inputType="text"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_texto2"
        android:hint="Digite um número aqui"
        app:layout_constraintTop_toBottomOf="@id/et_texto"
        android:inputType="number"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_texto3"
        android:hint="Digite outro número aqui"
        app:layout_constraintTop_toBottomOf="@id/et_texto2"
        android:inputType="number"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clique aqui"
        app:layout_constraintTop_toBottomOf="@id/et_texto3"
        android:id="@+id/bt_validacao"
        android:onClick="botaoValidacao"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx_resultado"
        app:layout_constraintTop_toBottomOf="@id/bt_validacao"
        />



</androidx.constraintlayout.widget.ConstraintLayout>